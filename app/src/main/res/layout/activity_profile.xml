<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.iron.espresso.presentation.viewmodel.ProfileViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.profile.ProfileActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp">

                <include
                    android:id="@+id/layout_header"
                    layout="@layout/view_profile_header" />

                <include
                    android:id="@+id/layout_career"
                    layout="@layout/view_info" />

                <include
                    android:id="@+id/layout_project"
                    layout="@layout/view_project" />

                <include
                    android:id="@+id/layout_sns"
                    layout="@layout/view_sns"
                    viewModel="@{viewModel}"/>

                <include
                    android:id="@+id/layout_email"
                    layout="@layout/view_email" />

                <include
                    android:id="@+id/layout_area"
                    layout="@layout/view_area" />


            </LinearLayout>


        </ScrollView>


    </LinearLayout>
</layout>